<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="#A1532828">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txtNombrePerro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="84dp"
                android:layout_marginTop="42dp"
                android:layout_marginEnd="118dp"
                android:ems="10"
                android:hint="Nombre del perro"
                android:inputType="textPersonName"
                android:text="Perro" />

            <EditText
                android:id="@+id/txtResponsable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNombrePerro"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="90dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="112dp"
                android:ems="10"
                android:hint="Responsable"
                android:inputType="textPersonName"
                android:text="responsable" />

            <EditText
                android:id="@+id/txtComentario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtResponsable"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="89dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="113dp"
                android:ems="10"
                android:hint="Comentario"
                android:inputType="textPersonName"
                android:text="Comentario" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="203dp"
                android:layout_height="35dp"
                android:layout_below="@+id/txtComentario"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="91dp"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="117dp"
                android:entries="@array/servicios" />

            <EditText
                android:id="@+id/txtNumTel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="96dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="105dp"
                android:ems="10"
                android:hint="NÃºmero de telefono"
                android:inputType="phone"
                android:text="99999999" />

            <EditText
                android:id="@+id/txtPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNumTel"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="97dp"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="104dp"
                android:ems="10"
                android:hint="Precio"
                android:inputType="numberDecimal"
                android:text="125" />

            <ImageView
                android:id="@+id/imgPerro"
                android:layout_width="154dp"
                android:layout_height="164dp"
                android:layout_below="@+id/txtPrecio"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="126dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="133dp"

                android:src="@drawable/ic_menu_camera"
                app:srcCompat="@drawable/ic_launcher_foreground"/>

            <Button
                android:id="@+id/btnSolicitar"
                android:layout_width="197dp"
                android:layout_height="65dp"
                android:layout_below="@+id/imgPerro"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="107dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="107dp"
                android:text="Solicitar" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>